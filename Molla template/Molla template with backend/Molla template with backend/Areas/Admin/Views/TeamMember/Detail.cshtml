@model TeamMemberDetailVM
@{
    ViewData["Title"] = "Detail";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <img src="~/assets/imgs/About/@Model.Image" style="width:100%;height:100%;"/>
        </div>
        <div class="col-6 d-flex flex-column justify-content-evenly">
            <h1>FullName: @Model.FullName</h1>
            <h3>Position: @Model.Position</h3>
            <h4>Description: @Model.Description</h4>
            
        </div>
    </div>
    <a asp-action="Index" class="btn btn-outline-info d-block m-auto my-5">Back</a>
</div>