@model List<SliderVM>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="col-12">
        <div class="bg-secondary rounded h-100 p-4">
          <div>
              <a class="btn btn-outline-success">Create</a>
          </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Image</th>
                            <th scope="col">Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var slider in Model)
                        {
                              <tr>
                            <td> <img src="~/assets/imgs/Home/@slider.Image" style="width:200px;height:120px;"/></td>
                            <td class="">
                                <a asp-action="Detail" asp-route-id="@slider.Id" class="btn btn-outline-info">Detail</a>
                                <a class="btn btn-outline-warning">Edit</a>
                                <a class="btn  btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                        }
                      

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>