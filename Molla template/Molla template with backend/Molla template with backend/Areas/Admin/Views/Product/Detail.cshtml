@model ProductDetailVM
@{
    ViewData["Title"] = "Detail";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <img src="~/assets/imgs/Home/@Model.ProductImages.FirstOrDefault(m=>m.IsMain).Image" style="width:100%;height:100%;"/>
        </div>
        <div class="col-6 d-flex flex-column justify-content-evenly">
            <h1>Category: @Model.Category.Name</h1>
            <h3>Title: @Model.Title</h3>
            <h4>Description: @Model.Description</h4>
            <h4>Price: $@Model.Price</h4>
        </div>
    </div>
    <a asp-action="Index" class="btn btn-outline-info d-block m-auto my-5">Back</a>
</div>

