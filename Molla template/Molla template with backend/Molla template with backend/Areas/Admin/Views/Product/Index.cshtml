@model List<ProductVM>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="col-12">
        <div class="bg-secondary rounded h-100 p-4">
            <div>
                <a class="btn btn-outline-success">Create</a>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Image</th>
                            <th scope="col">Category</th>
                            <th scope="col">Title</th>
                            <th scope="col">Description</th>
                            <th scope="col">Price</th>
                            <th scope="col">Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td> <img src="~/assets/imgs/Home/@product.ProductImages.FirstOrDefault(m=>m.IsMain).Image" style="width:150px;height:100px;" /></td>
                                <td>@product.Category.Name</td>
                                <td>@product.Title</td>
                                <td>@product.Description</td>
                                <td>$@product.Price</td>
                                <td class="">
                                    <a asp-action="Detail" asp-route-id="@product.Id" class="btn btn-outline-info">Detail</a>
                                    <a class="btn btn-outline-warning">Edit</a>
                                    <a class="btn  btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
